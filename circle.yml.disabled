# does not support matrix testing

machine:
  pre:
    # install more recent docker version
    - sudo curl -L -o /usr/bin/docker http://s3-external-1.amazonaws.com/circle-downloads/docker-1.6.2-circleci
    - sudo chmod 0755 /usr/bin/docker
    - sudo start docker

    # install vagrant
    - sudo wget --quiet https://dl.bintray.com/mitchellh/vagrant/vagrant_1.7.2_x86_64.deb
    - sudo dpkg -i vagrant_1.7.2_x86_64.deb
